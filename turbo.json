{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "NEXT_PUBLIC_*",
    "VERCEL_URL",
    "SKIP_ENV_VALIDATION",
    "SUPABASE_SERVICE_ROLE_KEY",
    "RESEND_API_KEY",
    "STRIPE_SECRET_KEY",
    "TELEGRAM_BOT_TOKEN",
    "GEMINI_API_KEY",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "storybook-static/**"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "check": {
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "typecheck": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
       "outputs": ["coverage/**"]
    },
    "e2e": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["playwright-report/**"]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "clean": {
      "cache": false
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["storybook-static/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
