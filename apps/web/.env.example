# Supabase Configuration
# Required for authentication and database access.
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Admin Configuration
# Used for special admin-only logic (e.g. bypassing certain checks).
# Optional: If not set, admin checks will simply fail.
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com

# YouTube Integration
# Required for fetching YouTube video data.
YOUTUBE_API_KEY=your_youtube_api_key

# Site Configuration
# The base URL of the application. Used for SEO (robots.txt, sitemap.xml).
# Defaults to 'https://www.theideaiq.com' if not set.
NEXT_PUBLIC_SITE_URL=http://localhost:3000
