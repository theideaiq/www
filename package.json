{
  "name": "monorepo-root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "check": "turbo check",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "storybook": "turbo storybook",
    "build-storybook": "turbo build-storybook",
    "prepare": "husky",
    "sync": "syncpack list-mismatches",
    "fix:sync": "syncpack fix-mismatches",
    "release": "turbo build && changeset publish",
    "clean": "turbo clean && rimraf node_modules",
    "audit": "pnpm audit --prod",
    "setup": "pnpm install && pnpm fix:sync && pnpm build && pnpm db:generate",
    "db:generate": "pnpm --filter @repo/database generate",
    "db:push": "pnpm --filter @repo/database push",
    "db:seed": "pnpm --filter @repo/database seed"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@playwright/test": "^1.58.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.3",
    "syncpack": "^14.0.0",
    "turbo": "^2.8.10"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "tar": "^7.5.3"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "@parcel/watcher",
      "@swc/core",
      "biome"
    ]
  },
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.27.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,json,css}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
